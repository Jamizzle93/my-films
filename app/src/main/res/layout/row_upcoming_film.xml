<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/row_upcoming_poster_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/row_upcoming_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/row_upcoming_poster_image"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="24sp"
        tools:text="Star Wars: The Force Awakens" />

    <TextView
        android:id="@+id/row_upcoming_release_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_upcoming_title_text"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/row_upcoming_poster_image"
        android:text="@string/label_release_date" />

    <TextView
        android:id="@+id/row_upcoming_release_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_upcoming_title_text"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/row_upcoming_release_label"
        tools:text="08/08/2016" />

</RelativeLayout>